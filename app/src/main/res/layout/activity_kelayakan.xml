<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/abu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.KelayakanActivity">

    <LinearLayout
        android:background="@color/ligh"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">
    </LinearLayout>

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="150dp"
        android:src="@drawable/profile"
        android:layout_width="100dp"
        android:layout_height="120dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginVertical="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="123dp"
        android:text="IZIN KERAMAIAN"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="21sp"/>

    <TextView
        android:text="Terima kasih"
        android:layout_marginTop="220dp"
        android:inputType="textMultiLine"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Mohon Menunggu Persetujuan Permohonan Berkasnya"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:inputType="textMultiLine"
        android:gravity="center_horizontal"
        android:layout_marginTop="260dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</RelativeLayout>